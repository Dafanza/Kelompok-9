# Inisialisasi harga
harga_pizza = 43000
harga_crust = 0
harga_ukuran = 0
harga_cheese = 0
total_biaya = 0

print("Selamat datang di Pizza Hut!")

while True:
    print("\nDaftar Menu Pizza:")
    print("1. Frankfurter BBQ")
    print("2. Meat Monst")
    print("3. Super Supreme")
    print("4. Super Supreme Chicken")

    pilihan_menu = int(input("Pilih jenis pizza (1-4): "))

    if pilihan_menu == 1:
        nama_pizza = "Frankfurter BBQ"
    elif pilihan_menu == 2:
        nama_pizza = "Meat Monst"
    elif pilihan_menu == 3:
        nama_pizza = "Super Supreme"
    elif pilihan_menu == 4:
        nama_pizza = "Super Supreme Chicken"
    else:
        print("Pilihan tidak valid. Silakan pilih lagi.")
        continue

    print("\nDaftar Crust:")
    print("1. Pan")
    print("2. Cheesy beats")
    print("3. Stuffed")
    print("4. Crown")

    pilihan_crust = int(input("Pilih jenis crust (1-4): "))

    if pilihan_crust == 1:
        nama_crust = "Pan"
        harga_crust = 5000
    elif pilihan_crust == 2:
        nama_crust = "Cheesy beats"
        harga_crust = 7000
    elif pilihan_crust == 3:
        nama_crust = "Stuffed"
        harga_crust = 10000
    elif pilihan_crust == 4:
        nama_crust = "Crown"
        harga_crust = 12000
    else:
        print("Pilihan tidak valid. Silakan pilih lagi.")
        continue

    print("\nDaftar Ukuran Pizza:")
    print("1. Large")
    print("2. Medium")
    print("3. Personal")

    pilihan_ukuran = int(input("Pilih ukuran pizza (1-3): "))

    if pilihan_ukuran == 1:
        nama_ukuran = "Large"
        harga_ukuran = 12000
    elif pilihan_ukuran == 2:
        nama_ukuran = "Medium"
        harga_ukuran = 10000
    elif pilihan_ukuran == 3:
        nama_ukuran = "Personal"
        harga_ukuran = 8000
    else:
        print("Pilihan tidak valid. Silakan pilih lagi.")
        continue

    tambah_cheese = input("Tambahkan keju (y/n)? ")

    if tambah_cheese.lower() == "y":
        harga_cheese = 13000

    total_biaya = harga_pizza + harga_crust + harga_ukuran + harga_cheese
    print(f"Anda telah memesan {nama_pizza} dengan crust {nama_crust}, ukuran {nama_ukuran}.")
    print(f"Total biaya: Rp. {total_biaya}")

    lanjutkan = input("Apakah ada menu lain (y/n)? ")
    if lanjutkan.lower() != "y":
        break

print("Terima kasih telah memilih Pizza Hut Delivery!")
print(f"Total biaya yang harus dibayar: Rp. {total_biaya}")
